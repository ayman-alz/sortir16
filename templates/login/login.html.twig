{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block content %}

            <form style="width: 400px;height: 400px ; margin: auto " method="post">
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                <div class="form-floating">
                    <input type="text" class="form-control" id="identifiant" name="identifiant" placeholder="Identifiant" required autofocus>
                    <label for="identifiant">Identifiant</label>
                </div>

                <div class="form-floating">
                    <input type="password" class="form-control" id="motdepasse" name="motdepasse" placeholder="Mot de passe" required>
                    <label for="motdepasse">Mot de passe</label>
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="seSouvenir" id="seSouvenir" name="seSouvenir">
                    <label class="form-check-label" for="seSouvenir">
                        Se souvenir de moi
                    </label>
                    <p class="mt-3"><a href="#">Mot de passe oublié</a></p>

                </div>

                <button class="btn btn-primary w-100 py-2" type="submit">Connexion</button>
                <p class="mt-5 mb-3 text-body-secondary">© 2023 Eni Ecole</p>

            </form>

{% endblock %}
